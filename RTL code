module comparator (
    input wire a,        
    input wire b,        
    output reg equal,    
    output reg greater,  
    output reg less,    
	 output reg zero
);

    always @(*) begin
        equal = 1'b1;
        greater = 1'b1;
        less = 1'b1;

        if (a == b) 
            equal <= 1'b0;    
        else if (a > b) 
            greater <= 1'b0;  

        else 
            less <= 1'b0;     
       
    end
	endmodule
